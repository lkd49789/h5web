/*输入*/
.tip-top{position: absolute;width: 42%; right: 0;top: 3%;}
.title{margin-top: 13%;width: 50%;}

.options li > img{width: 50%;margin: 1rem 0;}
.options li{margin: 1rem 0;}
.options li input{
	width: 15%;
	display: inline-block;
	vertical-align: middle;
	background-color: #fff;
	border: none;
	border-radius: .5rem;
	padding: .3rem;
	font-size: 1rem;
	line-height: 2rem;
	text-align: center;
	margin-left: 4%;
	color: #000;
}
.options li span{color: #99ffc8;display: inline-block;font-size: 1.3rem;}
.tip-bottom{width: 100%;margin: 1rem 0;}
.money{color: #fff;font-size: 1.1rem;padding-left: 4%;}
.money span{color: #fbf886;font-size: 1.4rem;text-decoration: underline;}
.btn-submit{width: 60%;margin-left: 20%;margin-top: 2rem;}

