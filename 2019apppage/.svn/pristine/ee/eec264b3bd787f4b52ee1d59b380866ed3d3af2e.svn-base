[v-cloak] {
    display: none !important;
} 
body{
    max-width: 640px;
    margin:0 auto;
    position: relative;
    font-size: 1.5rem;
}
button{
    background: none;
    border: 0;
    padding: 0;
    margin: 0;
}
#app{
    min-height: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: 2.6rem 1.4rem;
}
.idolWrap{
    display: flex;
    line-height: 5rem;
}
.idolWrap .head{
    width: 5rem;
    height:5rem;
    overflow: hidden;
    border-radius: 50%;
}
.idolWrap .head img{
    width: 100%;
}
.idolWrap .name{
    margin-left: .75rem;
    display: flex;
    align-items: center;
    font-size: 1.6rem;
    font-weight: bold;
}
.idolWrap .name img{
    height: .96rem;
    margin: 0 .25rem;
}

.auctionText{
    background: #f6f6f6;
    border-radius: .7rem;
    text-align: center;
    padding: .92rem 0;
    margin-top: 1.75rem;
}
.auctionText>div{
    color:#808080;
    font-size: 1.4rem;
}
.write{
    border: 1px solid #f0f0f0;
    border-radius: .7rem;
    height: 3.6rem;
    margin-top: 2rem;
    overflow: hidden;
}
.write input{
    width: 100%;
    height: 3.6rem;
    line-height: 3.6rem;
    border: 0;
    padding: 0;
    outline: none;
    text-align: center;
    font-size: 1.6rem;
}
.btn{
    background: url('../img/join_btn.png') no-repeat left top/100% 100%;
    width: 100%;
    color: #fff;
    border-radius: 3rem;
    height: 3.6rem;
    line-height: 3.6rem;
    font-size: 1.6rem;
    margin-top: 2rem;
}
.btnNo{
    background: #cccccc;
}
.p{
    text-align: center;
    font-size: 1.4rem;
    margin-top:1.1rem;
}
.p span{
    color: #56d7a8;
}
.p img{
    width: 1.25rem;
}
.history{
    margin-top: 2rem;
}
.history li{
    border-bottom: 1px solid #f2f2f2;
    color: #808080;
    display: flex;
    justify-content: space-between;
    height: 3rem;
    line-height: 3rem;
    font-size: 1.4rem;
    padding-right: .6rem;
}