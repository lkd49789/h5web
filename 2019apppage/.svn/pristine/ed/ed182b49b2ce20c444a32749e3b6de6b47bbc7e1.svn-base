

/* ------------------------------------------------------------------------------------------------ */
.dark-shadow{position: absolute;width: 100%;height: 100%;top: 0;left: 0;background: rgba(0,0,0,.5);}
.memSelBox{
    position: absolute;
    width: 88%;
    height:80%;
    top: 10%;
    left: 50%;
    margin-left: -44%;
    -webkit-box-sizing: border-box;
    box-sizing: border-box; 
    background: #fff;
    overflow: hidden;
    border-radius: 4px;
}

.close{
    position: relative;
    width: 100%;
    height:8%;
    top:0%;
    left: 0;
    -webkit-box-sizing: border-box;
    box-sizing: border-box; 
    background: #fff;
}
.close span{
    position: absolute;
    width: 1.7rem;
    height: 1.7rem;
    background: url(../img/X.png) no-repeat 0 0;
    background-size: 100%;
    top: 1rem;
    right:1rem;
}



.memberList,.teamList{width: 100%;height: 100%;max-width: 640px;position: fixed;top: 50%;left: 50%;transform: translate(-50%, -50%);-webkit-transform: translate(-50%, -50%);z-index: 15;}
