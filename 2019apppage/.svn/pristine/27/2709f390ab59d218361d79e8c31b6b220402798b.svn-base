[v-cloak] {
    display: none !important;
} 
body{
    max-width: 640px;
    margin:0 auto;
    position: relative;
    font-size: 1.4rem;
}
button{
    background: none;
    border: 0;
    padding: 0;
    margin: 0;
}
#app{
    height: 100%;
    min-height: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: 1.25rem .8rem;
}
.headWrap {
    display: flex;
    align-items: center;
}
.headWrap .head{
    width: 4.17rem;
    height: 4.17rem;
    overflow: hidden;
    border: 1px solid #d1bbff;
    border-radius: 50%;
}
.headWrap .head img{
    width: 100%;
}
.headWrap>img{
    width: 1.67rem;
}
.headWrap>span{
    margin: 0 .4rem;
    font-size: 1.6rem;
}