[v-cloak]{
    display: none;
}
html,body{color: #808080;background-color: #fff;}
h1{font-size: 1.5rem;font-weight: bold;color: #000;}
b{font-weight: bold; color: #000;}
section > div{padding: 3%;background-color: #fff;}
p{ line-height: 2rem;}
.rule-top p{line-height: 1.7rem;}
.rule-top > div{
	margin: 1rem 0;
}
.rule-top > div > p{
	    background-color: #f0e9fe;
    border-radius: .8rem;
    padding: 2rem .5rem .5rem .5rem;
    color: #000;
    margin-top: -1.5rem;
}
.rule-top h1{
	font-size: 1.4rem;
    color: #fff;
    background-color: #b68ffc;
    border-radius: 2rem;
    padding: .2rem 1rem;
    display: inline-block;
    position: relative;
    z-index: 1;
    margin-left: .5rem;
}
.btn{
	background: linear-gradient(to right,#ccacff,#6057ff );
	text-align: center;
	font-size: 1.5rem;
	color: #fff;
	border-radius: 2rem;
	width: 80%;
	margin: 0 10%;
	padding: .9rem 0;
	margin-top: 2rem;
	margin-bottom: 2rem;
	display: inline-block;
}

.mask div p{color: #000;font-weight: bold;}

.rule-bottom{
	background-color: #f8f4ff;
	border-radius: 1rem;
	padding: 1rem 3%;
	margin-top: 1rem;
}