/*预测项目页面*/
body{
    max-width: 640px;
    margin:0 auto;
    position: relative;
}
.forecast{
    padding: 3.125rem 1.375rem;
    min-height: 100%;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background: url(../img-speak/page/forecast_bg.jpg) no-repeat;
    background-size: 100% 100%;
}
.forecast_top{
    text-align: center;
}
.forecast_title img{
    height: 1.91rem;
}
.forecast_name{
    margin-top: 2.25rem;
}
.forecast_name img{
    width: 4.16rem;
    height: 4.16rem;
    border-radius: 50%;
    display: inline-block;
    border: 1px solid #f3f3f3;
}
.selectIdol span{
    color: #fff;
    font-weight: bold;
    border-bottom: 2px solid #fff;
    margin-top: .75rem;
    font-size: 1.5rem;
}
.forecast_tags{
    margin-top: 1.5rem;
}
.forecast_tagsUl{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
        -ms-flex-flow: row wrap;
            flex-flow: row wrap;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
    margin-top: .66rem;
}
.forecast_tagsUl li{
    background: url(../img-speak/page/tags.png) no-repeat;
    background-size:100% 100%;
    width: 5.16rem;
    height: 5.16rem;
    max-height: 110px;
    max-width: 110px;
    border-radius: .91rem;
}
.forecast_tagsUl .li{
    background: url(../img-speak/page/forecast_pitchon.png) no-repeat;
    background-size:100% 100%;
}
.forecast_rule{
    margin-top: .875rem;
}
.forecast_rule img{
    width: 19.4rem;
}
.forecast_num{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    color:#fff;
    margin-top: 1.25rem;
}
.forecast_num div{
    width: 50%;
    font-size: 1.2rem;
    line-height: 2.5rem
}
.forecast_num .topUp{
    color: #fbf886;
    border-bottom: #fbf886;
    font-size: 1.5rem;
    margin-left: .4rem;
}
button{
    border: 0;
    background: 0;
    background: url(../img-speak/page/forecast_btn.png) no-repeat;
    background-size: 100% 100%;
    width: 16.12rem;
    height: 3.62rem;
    outline: none;
    margin-top: 1.58rem;
}
