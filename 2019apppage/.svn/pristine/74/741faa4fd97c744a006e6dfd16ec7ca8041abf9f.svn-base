/*弹框*/
[v-cloak]{
    display: none;
}
.mask{position: fixed;width: 100%;height: 100%;text-align: center;background-color: rgba(0,0,0,.5);top: 0;left: 0;z-index: 100;}
.mask > div{
	width: 75%;
	background-color: #fff;
	border-radius: 1rem;
	position: absolute;
	top:45%;
    left:50%;
    transform:translate(-50%,-50%);
    /*display: none;*/
}
.mask div p{padding: 12% 5%;border-bottom: 1px solid #fff;font-size: 1.4rem;color: #000;}
.mask div > span{
	padding: .7rem 0;
	display: inline-block;
	color: #fff;
	font-size: 1.2rem;
	width:35%;
	background: linear-gradient(to right,#ccacff,#6057ff );
	border-radius: 3rem;
	margin: 0% 3% 8% 3%;
}
