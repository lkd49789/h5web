body{
	background-color:#5950b1;
	background-size: 100%;
	text-align: left;
	height: auto;
	position: relative;
	-webkit-overflow-scrolling: touch; 
	color: #fff;
}
section{
	padding: 2% 5%;
	border-radius: 10px;
	margin-bottom: 5%;
	-webkit-overflow-scrolling: touch; 
}
article{margin-bottom: 1rem;}
section img{
	width: 100%;
	margin-top: 1rem;
	margin-bottom: .5rem;
}
p{
	line-height: 2.2rem;
}

section div{
	padding: 5%;
	background-color: #5540b8;
	border-radius: 8px;
	margin-top: 1rem;
}
h1{
	font-size: 1.5rem;
}