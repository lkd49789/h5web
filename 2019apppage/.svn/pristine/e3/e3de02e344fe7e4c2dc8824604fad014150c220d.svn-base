[v-cloak] {
    display: none !important;
} 
button{
    border: 0;
}
body{
    max-width: 640px;
    margin:0 auto;
    position: relative;
    font-size: 1.5rem;
}
#app{
    min-height: 100%;
    box-sizing: border-box;
    background: #fff;
    background: url('../img/bg.jpg') no-repeat 0 0/100% 100%; 
    overflow: hidden;
    padding: 0 .83rem;
}
.banner{
    margin: 2rem -.83rem;
}
.banner img{
    width: 100%;
}
.content{
    background: rgba(0, 0, 21, .1);
    border: 1px solid #38387e;
    border-radius: .8rem;
    padding:0 .6rem 1rem;
    box-sizing: border-box;
}
.title-wrap img{
    height: 1.25rem;
    margin:1.38rem 0 .9rem;
}
ul{
    display: flex;
    flex-flow: row wrap;
    justify-content: center;
}
.item{
    width: 32%;
    position: relative;
    margin-right:2%;
    margin-top: .5rem;
    box-shadow: 1px 1px 8px #0f0e62;
    border-radius: .5rem;
}
.item:nth-child(3n){
    margin-right:0;
}
.item img{
    width: 100%;
}
.item .pos{
    position: absolute;
    width:100%;
    height: 100%;
    left: 0;
    top: 0;
}
.musicBtn-wrap{
    width: 70%;
    margin:0 auto;
    color: #fff;
    display: flex;
    flex-flow: column;
    align-items: center;
    padding-top: .4rem;
    overflow: hidden;
}
.musicBtn-wrap img{
    width: auto;
    height: 1.54rem;
    margin: .6rem 0 1rem;
}
.btn-wrap{
    display: flex;
    justify-content: space-around;
    position: absolute;
    bottom: .8rem;
    width: 100%;
}
.btn-wrap button{
    background: #fd5be0;
    color: #fff;
    height: 1.67rem;
    width: 42%;
    border-radius: .6rem;
}
.btn-wrap .stop{
    background: #51bce8;
}
.botttom{
    position: absolute;
    bottom: 1rem;
    left:0;
    width: 100%;
    color:#fff;
    text-align: center;
}
.botttom .rule{
    display: flex;
    justify-content: space-between;
    background: #05054f;
    padding: 1rem .83rem;
}
.botttom .em{
    border-right: 1px solid #fff;
    border-top:1px solid #fff;
    transform: rotateZ(45deg);
    width: .8rem;
    height: .8rem;
    display: inline-block;
}
.botttom p{
    margin-bottom:.6rem;
}
.mask .left{
    text-align: left;
}