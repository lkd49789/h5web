/*预测项目页面*/
[v-cloak]{
    display: none;
}
body{
    max-width: 640px;
    margin:0 auto;
    position: relative;
}
.forecast{
    padding: 3.125rem 1.375rem;
    min-height: 100%;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background: url(../img-speak/page/forecast_bg.jpg) no-repeat;
    background-size: 100% 100%;
}
.forecast_top{
    text-align: center;
}
.forecast_title img{
    height: 1.91rem;
}
.forecast_name{
    margin-top: 2.25rem;
}
.headWrap{
    background: #fff;
    width: 4.16rem;
    height: 4.16rem;
    overflow: hidden;
    border: 1px solid #f3f3f3;
    margin: 0 auto;
    border-radius: 50%;
}
.forecast_name img{
    width: 4.16rem;
    border-radius: 50%;
    display: inline-block;
    margin-top: -5px;
}
.selectIdolp span{
    color: #fff;
    font-weight: bold;
    border-bottom: 2px solid #fff;
    margin-top: .75rem;
    font-size: 1.5rem;
}
.selectIdolp .span{
    border-bottom: 0px;
    color: #4ec1b0;
}
.forecast_tags{
    margin-top: 1.5rem;
}
.forecast_tagsUl{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
        -ms-flex-flow: row wrap;
            flex-flow: row wrap;
    margin-top: .66rem;
}
.forecast_tagsUl li{
    width: 18.8%;
    margin-right:1.5%;
    margin-top: .6rem;
    position: relative;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    position: relative;
}
.forecast_tagsUl li .bg{
    width:100%;
    height: auto;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.forecast_tagsUl li .icon{
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
    z-index: 98;
}
.forecast_tagsUl li:nth-child(5n){
    margin-right:0%;
}
.forecast_tagsUl li>img,.forecast_tagsUl li .pos{
    width: 4.2rem;
    height: 4.2rem;
    max-height: 110px;
    max-width: 110px;
}
.forecast_tagsUl li .pos{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 50%;
    top: 50%;
    -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    border: 1px solid #9b5d77;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background: rgba(221, 156, 160, .6);
    -webkit-box-pack:center;
        -ms-flex-pack:center;
            justify-content:center;
    -webkit-box-align:center;
        -ms-flex-align:center;
            align-items:center;
    border-radius: 1rem;
    z-index: 99;
}
.pos img {
    width: 2.25rem;
    height: 2rem;
}
.forecast_rule{
    margin-top: .875rem;
}
.forecast_rule img{
    width: 19.4rem;
}
.forecast_num{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    color:#fff;
    margin-top: 1.25rem;
    font-weight: bold;
}
.forecast_num div{
    width: 50%;
    font-size: 1.3rem;
    line-height: 2.5rem
}
.forecast_num .topUp{
    color: #fbf886;
    border-bottom: #fbf886;
    font-size: 1.5rem;
    margin-left: .4rem;
}
button{
    border: 0;
    background: 0;
    background: url(../img-speak/page/forecast_btn.png) no-repeat;
    background-size: 100% 100%;
    width: 16.12rem;
    height: 3.62rem;
    outline: none;
    margin-top: 1.58rem;
}


/*选择偶像*/
 .selectIdol{
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
    top: 0;
    left:0;
    z-index: 100;
}
.selectIdol .contentWrap{
    width: 80%;
    height: 25rem;
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
    background: #fff;
    border-radius: 1rem;
    padding-top: 1.67rem;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    position: relative;
}
.selectIdol .content{
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    font-size: 1.5rem;
    -ms-flex-flow:wrap;
        flex-flow:wrap; 
}
.idolwrap{
    width: calc(50% - .63rem);
    text-align: center;
    margin-bottom: 1.25rem;
}
.selectIdol .content .idol{
    background: #f6f6f6;
    border-radius: 2rem;
    height: 2rem;
    padding: 1rem 1.8rem;
    margin-left: 1.25rem;
    color: #585858;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align:center;
        -ms-flex-align:center;
            align-items:center;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center;
}
.selectIdol .content .idol img{
    width:1.75rem;
    height: 1rem;
    margin-left: 3px;
} 
/*关闭按钮*/
.btn-close{
    position: absolute;
    width: 3rem;
    height: 3rem;
    right: -1.5rem;
    top: -1.5rem;
}