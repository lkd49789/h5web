[v-cloak] {
    display: none !important;
} 
body{
    max-width: 640px;
    margin:0 auto;
    position: relative;
    font-size: 1.4rem;
}
button{
    background: none;
    border: 0;
    padding: 0;
    margin: 0;
}
#app{
    height: 100%;
    min-height: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: .6rem;
}
.wrap{
    height: 100%;
    background: #ccc;
    padding: .8rem;
    box-sizing: border-box;
}
.wrap2{
    position: relative;
    height: 100%;
}
.head{
    border-radius: 50%;
    border: 1px solid #fff;
    width: 4.17rem;
    height: 4.17rem;
    overflow: hidden;
}
.head img{
    width: 100%;
}
.name{
    margin-top: .2rem;
}
.name img{
    width: 1.67rem;
}
.bottom{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
}
.btnWrap {
    display: flex;
    margin-top:1.25rem;
}
.btnWrap .btn{
    width: 48%;
    margin-right:4%;
    color: #fff; 
    border-radius: 2rem;
    text-align: center;
}
.btnWrap .btn:last-of-type{
    margin-right: 0;
}
.btnWrap .btn img{
    width: 100%;
}
.meng{
    border-radius:.8rem;
    background: rgba(255, 255, 255, .8); 
    text-align: center;
    padding: 1.5rem 0;
    position: relative;
}
.moneyWrap{
    font-size: 1.6rem;
}
.money{
    margin-left: .4rem;
    color: #7ac5ab;
}
.timeWrap{
    margin-top: .8rem;
}
.time1{
    display: flex;
    justify-content:center;
}
.time2{
    display: none;
}
.timeWrap .box{
    background: #fff;
    border-radius: .4rem;
    width: 1.8rem;
    height: 1.8rem;
    display: inline-block;
    margin: 0 .6rem;
    line-height: 1.8rem;
    color: #000;
    padding: 0 .2rem;
}
.pos{
    position: absolute;
    left: 0;
    top: 0;
    align-items: center;
    background: #919292;
    border-radius: .8rem 0 3rem 0;
    padding: .2rem 1.2rem .2rem .6rem;
    font-size: 1rem;
    display: none;
}
.pos .img{
    width: 1.17rem;
    height: 1.17rem;
    margin-right: .2rem;
    display: inline-block;
}

/*未中标*/
.meng0{
    background: rgba(175, 178, 181, .7);
    color: #fff;
}
.meng0 .pos{
    display: flex;
}
.meng0 .pos .img{
   background: url('../img/cross.png') no-repeat left top/100% 100%;
}
.meng0 .money{
    color: #fff;
}

/*中标*/
.meng1{
    background: rgba(90, 198, 166, .7);
    color: #fff;
}
.meng1 .pos{
    background: #329978;
    display: flex;
}
.meng1 .pos .img{
   background: url('../img/nike.png') no-repeat left top/100% 100%;
}
.meng1 .money{
    color: #fff;
}

/*中标 付款*/
.meng1_pay .timeWrap .box{
    color:#f3605d;
}
.meng1_pay .hours{
    display: none;
}

/*未付款*/
.meng2{
    background: rgba(220, 68, 71, .7);
    color: #fff;
}
.meng2 .pos{
    background: #ce2525;
    display: flex;
}
.meng2 .pos .img{
    background: url('../img/nike.png') no-repeat left top/100% 100%;
 }
.meng2 .time1{
    display: none;
}
.meng2 .time2{
    display: block;
}
.meng2 .money{
    color: #fff;
}


/**/
#payPgae{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, .3);
}
#payPgae .box{
    position: absolute;
    bottom: 0;
    left:0;
    width: 100%;
    height: 32%;
    background: #fbfbfb;
    text-align: center;
}
.box>p{
    line-height: 6.67rem;
    font-size: 2rem;
}
#payPgae .pay{
    display: flex;
    padding: 0 10%;
}
#payPgae .pay img{
    width: 6rem;
}
#payPgae .pay>div{
    width:50%;
    color: #828283;
}
