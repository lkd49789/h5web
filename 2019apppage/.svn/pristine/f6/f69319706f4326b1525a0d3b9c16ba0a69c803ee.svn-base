body{
	margin:0 auto;
	background-color: #fff;
	/*-webkit-overflow-scrolling: touch; */
	    background-color: #6741e9;
}

section{
	background-color: #6741e9;
	text-align: left;
	/*padding-bottom: 5%;*/
	/*-webkit-overflow-scrolling: touch; */
	max-height: 90%;
}

[v-cloak]{
    display: none;
}
#pullrefresh{
	top: 3%;
    padding: 3%;
    width: 94%;
    margin-left: 3%;
    border-radius: 10px;
    -webkit-box-shadow: 0px 0px 40px #b0aeff inset;
    margin-bottom: 5%;
}
.mui-pull-loading{
	font-size: 1rem;
}
.mui-scroll{
	width: 94%;
}
.mui-table-view:after,.mui-table-view:before{
	display: none;
}
p{
	 margin-bottom: 0px;
}
#pullrefresh li,.msg-toplist li{
	
	border-bottom: 1px solid #f1f1f1;
}
.mui-pull-bottom-tips{
	text-align: center;
}
.empty{width: 100%;margin-top: 2rem;}
/*member-info*/
.member-info{
	text-align: left;
	margin-bottom: 5%;
}
.member-info span{
	line-height: 5rem;
	vertical-align: middle;
	color: #444444;
	margin-right: 3%;
}
.photo{
	display: inline-block;
	width: 5rem;
	height: 5rem;
	overflow: hidden;
	border-radius: 5rem;
	vertical-align: middle;
}
.photo > img{
	margin-bottom: -10%;
	width: 100%;
}
.like-box{
	float: right;
	color: #808080 !important;
}
.like-box img{
	width: 1.5rem;
    margin-bottom: 2px;
    margin-left: 5px;
}
.icon-gotomsg{
	width: 24%;
	position: fixed;
	bottom: 2%;
	left: 38%;
	z-index: 10000;
}
/*tg-content*/
.tg-content{
	width: 84%;
	border-radius: 10px;
	background-color: #fff;
	-webkit-box-shadow: 0px 0px 40px #b0aeff inset;
	box-shadow: 0px 0px 40px #b0aeff inset;
	margin: 0 auto;
	padding: 5%;
	text-align: left;
	 margin-bottom: 5%;
}
.tg-list li{
	border-bottom: 1px solid #f1f1f1;
	padding: 5% 0;
}
.tg-top{
	position: relative;
	margin-bottom: 10px;
}
.tg-top img{
	width: 3rem;
	border-radius: 100%;
}
.tg-top span{
	color: #808080;
	line-height: 3rem;
	font-size:1.3rem;

}
.ctime{
	color: #c4c4c4 !important;
	position: absolute;
	right: 0;
	font-size: .8rem !important;
}
.tg-bottom{
	position: relative;
}
.cover{
	position: relative;
    width: 30%;
    display: inline-block;
    vertical-align: middle;
    max-height: 6rem;
    overflow: hidden;
    border-radius: 5px;
}
.cover img{
	width: 100%;
	border-radius:5px;
}
.cover-right{
	width: 66%;
	display: inline-block;
	vertical-align: middle;
	margin-left: 2%;
}
.like-num{
	margin: 2px 0;
}
.like-num span{
	margin-right: 10px;
	color: #c4c4c4;
    font-size: .8rem
}
.like-num img{
	width: 1rem;
	margin-right: 5px;
	vertical-align: text-bottom;
}
.tg-m-name{
	background-color: #656cf2;
	border-radius: 20px;
	padding: 2px 15px;
	color: #fff;
	font-size: 1rem;
}

