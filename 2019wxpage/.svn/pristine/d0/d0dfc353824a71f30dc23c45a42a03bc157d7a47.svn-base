}
.DIV-SNH-H(@DEG: 45deg, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){
	.C-LG-COLOR(@DEG, @C-SNH-LIGHT-H, @C-SNH-H);
	.DROP-SHADOW(@C-SNH-H, @OPACITY, @X, @Y, @DEPTH);
}
.DIV-SNH-X(@DEG: 45deg, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){
	.C-LG-COLOR(@DEG, @C-SNH-LIGHT-X, @C-SNH-X);
	.DROP-SHADOW(@C-SNH-X, @OPACITY, @X, @Y, @DEPTH);
}
.DIV-SNH-XII(@DEG: 45deg, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){
