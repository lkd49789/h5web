/***************************************************
		定义 SNH48 GROUP 专属颜色
***************************************************/

//分团颜色
@C-GROUP: @C-LG-BLUE;
@C-SNH: rgba(142, 210, 245, 1);
@C-BEJ: rgba(253, 42, 111, 1);
@C-GNZ: rgba(166, 200, 25, 1);
@C-SHY: rgba(230, 0, 193, 1);
@C-CKG: rgba(164, 98, 1, 1);

//SNH 队伍颜色
@C-SNH-LIGHT-S: rgba(135, 199, 244, 1);
@C-SNH-S: rgba(83, 184, 255, 1);
@C-SNH-LIGHT-N: rgba(212, 149, 231, 1);
@C-SNH-N: rgba(189, 156, 198, 1);
@C-SNH-LIGHT-H: rgba(248, 192, 34, 1);
@C-SNH-H: rgba(248, 167, 34, 1);
@C-SNH-LIGHT-X: rgba(191, 221, 32, 1);
@C-SNH-X: rgba(166, 206, 40, 1);
@C-SNH-LIGHT-XII: rgba(34, 221, 157, 1);
@C-SNH-XII: rgba(4, 203, 132, 1);
@C-SNH-LIGHT-FT: rgba(242, 64, 114, 1);
@C-SNH-FT: rgba(219, 0, 100, 1);
@C-SNH-LIGHT-READY: rgba(179, 190, 193, 1);
@C-SNH-READY: rgba(167, 176, 186, 1);

//SNH 队伍渐变
@C-LG-S: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-S, @C-SNH-S);
@C-LG-N: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-N, @C-SNH-N);
@C-LG-H: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-H, @C-SNH-H);
@C-LG-X: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-X, @C-SNH-X);
@C-LG-XII: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-XII, @C-SNH-XII);
@C-LG-FT: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-FT, @C-SNH-FT);
@C-LG-READY: linear-gradient(@C-LG-DEG, @C-SNH-LIGHT-READY, @C-SNH-READY);

//SNH 队伍块风格
.DIV-SNH-S(@DEG: 45deg, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){
	.C-LG-COLOR(@DEG, @C-SNH-LIGHT-S, @C-SNH-S);
	.DROP-SHADOW(@C-SNH-S, @OPACITY, @X, @Y, @DEPTH);
}
.DIV-SNH-N(@DEG: 45deg, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){
