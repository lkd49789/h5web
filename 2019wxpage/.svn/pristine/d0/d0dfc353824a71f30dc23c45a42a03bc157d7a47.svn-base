/***************************************************
		定义通用风格（颜色、渐变、投影、圆角）
***************************************************/

//纯色
@C-LIGHT-BLUE: rgba(186, 222, 242, 1);
@C-BLUE: rgba(137, 199, 255, 1);
@C-LIGHT-PINK: rgba(242, 230, 200, 1);
@C-PINK: rgba(243, 161, 196, 1);
@C-LIGHT-YELLOW: rgba(242, 232, 200, 1);
@C-YELLOW: rgba(247, 183, 121, 1);
@C-LIGHT-VIOLET: rgba(207, 217, 244, 1);
@C-VIOLET: rgba(163, 165, 244, 1);
@C-LIGHT-DARK: rgba(217, 218, 238, 1);
@C-DARK: rgba(0, 0, 0, 1);
@C-LIGHT: rgba(255, 255, 255, 1);

//背景色
@C-BG: rgba(255, 255, 255, 1);
@C-BG-DARK: rgba(32, 32, 32, 1);

//渐变角度
@C-LG-DEG: 45deg;

//背景渐变
@C-LG-BLUE: linear-gradient(@C-LG-DEG, @C-LIGHT-BLUE, @C-BLUE);
@C-LG-PINK: linear-gradient(@C-LG-DEG, @C-LIGHT-PINK, @C-PINK);
@C-LG-YELLOW: linear-gradient(@C-LG-DEG, @C-LIGHT-YELLOW, @C-YELLOW);
@C-LG-VIOLET: linear-gradient(@C-LG-DEG, @C-LIGHT-VIOLET, @C-VIOLET);
.C-LG-COLOR(@DEG: @C-LG-DEG, @COLOR1: @C-LIGHT-BLUE, @COLOR2: @C-BLUE){background: linear-gradient(@DEG, @COLOR1, @COLOR2)}

//文字渐变
.C-LG-TXT{
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}
.C-LG-TXT-BLUE{background: @C-LG-BLUE; .C-LG-TXT;}
.C-LG-TXT-PINK{background: @C-LG-PINK; .C-LG-TXT;}
.C-LG-TXT-YELLOW{background: @C-LG-YELLOW; .C-LG-TXT;}
.C-LG-TXT-VIOLET{background: @C-LG-VIOLET; .C-LG-TXT;}

//投影
.DROP-SHADOW(@COLOR: @C-BLUE, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){box-shadow: fade(@COLOR, @OPACITY) @X @Y @DEPTH;}
.FILTER-SHADOW(@COLOR: @C-BLUE, @OPACITY: 26%, @X: -12px, @Y: 12px, @DEPTH: 24px){filter:drop-shadow(fade(@COLOR, @OPACITY) @X @Y @DEPTH);}

//字体投影
.TEXT-SHADOW(@COLOR: @C-BLUE, @OPACITY: 26%){text-shadow: fade(@COLOR, @OPACITY) -6px 6px 12px;}

//圆角
.BORDER-RADIUS-BTN{border-radius: 2px;}
.BORDER-RADIUS-CIRLCE{border-radius: 99em;}


/***************************************************
		定义字体
***************************************************/

//字族
.FONT-FAMILY-CN{font-family: "PingFang SC", "Helvetica Neue", "Helvetica", "Hiragino Sans GB", "Arial", "Verdana", "Microsoft Yahei", sans-serif;}
.FONT-FAMILY-EN{font-family: "Helvetica Neue", "Helvetica", "Hiragino Sans GB", "Arial", "Verdana", "Century Gothic";}

//字体尺寸
.TITLE-1(@FONT-SIZE: 2.8rem, @LINE-HEIGHT: 1.21){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.TITLE-2(@FONT-SIZE: 2.2rem, @LINE-HEIGHT: 1.27){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.TITLE-3(@FONT-SIZE: 2.0rem, @LINE-HEIGHT: 1.25){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.HEADLINE(@FONT-SIZE: 1.7rem, @LINE-HEIGHT: 1.29){.FONT-WEIGHT-BOLD; font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.BODY(@FONT-SIZE: 1.6rem, @LINE-HEIGHT: 1.29){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.CALLOUT(@FONT-SIZE: 1.5rem, @LINE-HEIGHT: 1.31){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.SUBHEAD(@FONT-SIZE: 1.4rem, @LINE-HEIGHT: 1.33){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.FOOTNOTE(@FONT-SIZE: 1.3rem, @LINE-HEIGHT: 1.38){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.CAPTION-1(@FONT-SIZE: 1.2rem, @LINE-HEIGHT: 1.33){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.CAPTION-2(@FONT-SIZE: 1.1rem, @LINE-HEIGHT: 1.18){font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}
.TABBER(@FONT-SIZE: 1.0rem, @LINE-HEIGHT: 1.1){.FONT-WEIGHT-BOLD; font-size: @FONT-SIZE; line-height: @LINE-HEIGHT;}

//字重
.FONT-WEIGHT-LIGHT{font-weight: 200;}
.FONT-WEIGHT-REGULAR{font-weight: 400;}
.FONT-WEIGHT-BOLD{font-weight: 600;}

//字体颜色
@FC-DARK-1: fade(@C-DARK, 100%);
@FC-DARK-2: fade(@C-DARK, 87%);
@FC-DARK-3: fade(@C-DARK, 64%);
@FC-DARK-4: fade(@C-DARK, 56%);
@FC-DARK-5: fade(@C-DARK, 37%);
@FC-DARK-6: fade(@C-DARK, 26%);
@FC-DARK-7: fade(@C-DARK, 12%);
@FC-DARK-8: fade(@C-DARK, 6%);
