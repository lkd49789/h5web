/***************************************************
		定义复用风格
***************************************************/

//图片替换文字
.TXT2PIC{text-indent: -9999em;}

//文字两端对齐，适配 IE
.JUSTIFY{text-align: justify; text-justify: inter-ideograph;}

//行内布局
.INLINE-BLOCK(@LAYOUT: left, @ALIGN: left){
	font-size: 0; letter-spacing: -4px; line-height: 0; text-align: @LAYOUT;
	&>*{vertical-align: top; display: inline-block;}
	*{.BODY; text-align: @ALIGN; letter-spacing: normal;}
	&:after{content: ""; width: 100%; height: 0; display: inline-block;}
}

//行内垂直居中
.VERTICAL-ALIGN{
	>*, &:before{vertical-align: middle; display: inline-block;}
	&:before{content: ""; width: 0; height: 100%;}
}

//行内强制换行
.ENTER{
	&:after{content: "\D\A"; white-space: pre;}
}

//多行文字截字
.TEXT-CUT(@NUM: 1){text-overflow: ellipsis; -webkit-line-clamp: @NUM; -webkit-box-orient: vertical; display: -webkit-box; overflow : hidden;}

//容器定位
.POSITION(@POSITION: absolute, @TOP: 0, @RIGHT: 0, @BOTTOM: 0, @LEFT: 0){position: @POSITION; top: @TOP; right: @RIGHT; bottom: @BOTTOM; left: @LEFT;}

//安全区域
@SAFETY-VALUE: 16px;
.SAFETY-AREA(@PADDING: @SAFETY-VALUE){padding: 0 @PADDING;}

//页面最大宽度
.MAX-WIDTH{max-width: 1920px; margin: 0 auto;}

//图片 hover
.IMG-HOVER{
	position: relative;
	&:before{.POSITION; content: ""; display: block; z-index: 1;}
	&:hover{
		img{filter: brightness(126%);}
		&:before{background: fade(@C-BLUE, 37%);}
	}
}




/***************************************************
		CSS 初始化
***************************************************/

*{font-variant: small-caps; line-height: inherit; margin: 0; padding: 0; box-sizing: border-box;}
html{.MAX-WIDTH; font-size: 10px;}
body{.FONT-FAMILY-CN; .BODY; color: @C-DARK; background: @C-BG;}
body *, body *:before, body *:after{transition: ease-in-out 500ms; transition-property: background, color, border, width, height, margin, padding, top, right, bottom, left, transform, opacity, visibility, zoom;}
h1, h2, h3, h4, h5, h6{.FONT-WEIGHT-REGULAR; margin: 0; padding: 0;}
ul, ol{list-style: none;}
a{color: @C-DARK; text-decoration: none; display: inline-block;}
b{.FONT-WEIGHT-BOLD;}
i{font-style: normal;}
input, textarea{background: none; border: none; outline: none; font-variant: normal;}
input{width: 100%; height: 100%; padding: 4px 8px;}

//针对 H5 设置
img{
	//屏蔽图片长按
	max-width: 100%; max-height: 100%; pointer-events: none;
}
a{
	//修改 webkit a 标签的点击效果
	-webkit-tap-highlight-color: transparent;
}
















